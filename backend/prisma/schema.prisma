datasource db {
    provider = "mysql" // atau "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-openssl-3.0.x"] // Tambahkan target untuk Docker Linux
}

model User {
    id        Int      @id @default(autoincrement())
    username  String   @unique
    password  String
    role      Role
    wilayah   String
    createdAt DateTime @default(now())
}

model Pendaftaran {
    id        Int      @id @default(autoincrement())
    nik       String   @unique
    nama      String
    noHp      String   @unique
    provinsi  String
    kabupaten String
    kecamatan String
    kelurahan String
    createdAt DateTime @default(now())
}

enum Role {
    PUSAT
    PROVINSI
    KABUPATEN
    KECAMATAN
    KELURAHAN
}
